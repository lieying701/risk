extends /_page
append head
    title 分派风勘任务
    link(rel="stylesheet", type="text/css", href="risksurvey/risksurvey/css/riskSurvey.less")
    link(rel="stylesheet", type="text/css", href="risksurvey/base/css/custom.less")
    link(rel="stylesheet", type="text/css", href="risksurvey/base/css/basic.less")

block body
    .commonProductInfo.reassignTask()
        .title
            span=ll.l("分派风勘任务")
        .topmessage
            .topleftline
            span=ll.l("选择任务执行人")
        .ui.panel
            .content
                c-form.transparent.reassignForm(bind="queryCondition")
                    fields.cols-2
                        field
                            label=ll.l("风勘员所属机构")
                            c-dropdown(c-items="firstStructure" c-bind="makeCom" assignment="makeCom=key;makeComName=value;")
                            c-dropdown(c-items="levelList")
                            c-dropdown(c-items="levelList")
                    fields.cols-2
                        field
                            label=ll.l("风险查勘员")
                            c-dropdown(c-items="risksurveyer" c-bind="userlogin" assignment="userlogin=key;userloginName=value;")
                    fields.cols-2
                        field
                            hr()
                    fields.cols-2
                        field
                            c-button(caption=ll.l("确认指派") class="confirmAssignBtn button" c-onclick="confirmAssign(userlogin)")
                            c-button(caption=ll.l("取消") class="cancelAssignBtn button" c-onclick="cancelAssign()")

prepend scripts
    script(src="./risksurvey/product/contractEntity.js")
append scripts
    script(src="risksurvey/risksurvey/js/riskSurveyAssign.js")
    script(src="risksurvey/base/js/custom.js")

