                                            template
                                                c-dropdown(c-bind="$default" c-items="riskCodeList" readonly="true")
                                        column(property="appliName" caption=ll.l("applicantName") align="center")
                                        column(property="insuredName" caption=ll.l("insured") align="center")
                                        column(property="rmbvalueAMT" caption=ll.l("faceAmount") align="center")
                                            template
                                                c-input(c-bind="$default" displayFormat="#,##0.00" readonly="true" )
                                        column(property="rmbpremiumAMT" caption=ll.l("premium") align="center")
                                            template
                                                c-input(c-bind="$default" displayFormat="#,##0.00" readonly="true" )
