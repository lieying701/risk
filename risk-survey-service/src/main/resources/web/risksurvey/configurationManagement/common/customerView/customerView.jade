.x-wrap#import(style="width:100%")
    .wrapcontent
        .wrap(id="navMain")
            .customerView(c-repeat="obj in policyHolder")
                .topmessage
                    .topleftline
                    span#insureId(c-bind="'投保人'+$index")
                .policycontent
                    c-form.policycontentForm
                        fields.cols-3
                            field
                                label=ll.l("customerName")
                                c-input(readonly="true" bind="obj.customerName")
                            field
                                label=ll.l("customerType")
                                c-dropdown.customerType(readonly="true" c-bind="obj.customerType=='1'?'个人':'组织'" c-items="dictionary('CustomerType')")
                            field
                                label=ll.l("CustomerRiskLevel")
                                c-input(readonly="true" bind="obj.customerLevel")
                        fields.cols-3
                            field
                                label=ll.l("CustomerRiskAccumulated")
                                c-input(readonly="true" bind="obj.sum")
                c-panel(caption=ll.l("ApplicantHistory") id="insureIdHistory")
                    .content
                        c-segment
                            .policycontent
                                .riskContent.insureIdContent
                                    c-table.bordered.changeInput(bind="obj.historyPolicy" align="left")
                                        column(property="seq_No" caption=ll.l("no") width="30px" align="center")
                                            template
                                                .row-index
                                        column(property="policyNo" caption=ll.l("policyNo") align="center")
                                            template
                                                c-input(c-bind="$default" c-title="$default" readonly="true")
                                        //column(property="classCode" caption="险类" align="center")
